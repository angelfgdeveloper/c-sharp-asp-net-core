@* Asignado es para decirle que es fuertemente tipado como esta en el modelo *@
@model Curso 

@{ 
    @* Codigo Csharp *@
    @* Es debil mente tipado y este segmento de código se conoce como razor syntax*@
    ViewData["Title"] = "Creación de Curso";

    @* Nombre de la plantilla o template *@
    Layout = "Simple";
    @* Layout = "_Layout"; *@
}

<br><br><br>
<h1>@ViewData["Title"]</h1>
<h2>@ViewBag.MensajeExtra</h2>

@* Generame las validaciones *@
<div asp-validation-summary="All"></div>

<form method="POST">
    <div>
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" />
    </div>
    <div>
        <label asp-for="Direccion"></label>
        <input asp-for="Direccion" />
    </div>
    <div>
        <label asp-for="Jornada"></label>
        @* <input asp-for="Jornada" /> *@
        @Html.DropDownList(
            "Jornada", // Referencia del campo
            Html.GetEnumSelectList<TiposJornada>(), // Trae toda la lista
            "Seleccione una jornada", // placeholder
            new { @class = "form-control" } // estilos para formulario
        )
    </div>

    <input type="submit" />
</form>


<p><i>@ViewBag.Fecha</i></p>
