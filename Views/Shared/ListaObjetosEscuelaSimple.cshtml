@* @model List<ObjetoEscuelaBase> *@

@* Vista o componente reutilizable *@
@* <p>
    Nombre: @Model.Nombre <br/>
    Id: @Model.UniqueId
</p> *@

<table class="table table-dark table-hover">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nombre</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in @Model)
        {
        <tr>
            <td>@obj.Nombre</td>
            <td>@obj.Id</td>
        </tr>
        }
    </tbody>
</table>